<div id="<%= dom_id blog %>">
  <p>
    <strong>Title:</strong>
    <%= blog.title.upcase %>
  </p>
<p>
  <%= distance_of_time_in_words(blog.created_at,Time.now)%>
</p>
  <p>
    <strong>Body:</strong>
    <%= blog.body %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= link_to blog.status , toggle_status_blog_path(blog) %>
  </p>
  
  <p>
    <%= link_to "Show this blog", blog %>
  </p>
</div>
