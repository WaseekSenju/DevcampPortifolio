<h1> Portifolios Items </h1>

<%= link_to "Create New Item via link to", new_portifolio_path%>


<% @portfolio_items.each do |portfolio_item|%>
    <p><%= link_to portfolio_item.title, portifolio_path(portfolio_item)%></p>
    <p><%=portfolio_item.subtitle%></p>
    <p><%=portfolio_item.body%></p>
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <%= link_to "Edit", edit_portifolio_path(portfolio_item.id)%>
    
<%end%>