<h1> Portifolios Items </h1>

<%= link_to "Create New Item via link to", new_portifolio_path%>


<% @portfolio_items.each do |portfolio_item|%>
    <p><%= link_to portfolio_item.title, portifolio_show_path(portfolio_item)%></p>
    <p><%=portfolio_item.subtitle%></p>
    <p><%=portfolio_item.body%></p>
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <%= link_to "Edit", edit_portifolio_path(portfolio_item)%>
    <%= link_to "Destroy this Portfolio", portifolio_delete_path(portfolio_item), method: :delete, data: { "turbo-method": :delete , turbo_confirm: 'Are you sure?' }%>

<%end%>
